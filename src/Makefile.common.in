# Define SOURCES and CMI before including this file.
# You also may want to define CAMLFLAGS

OCAMLFIND =@OCAMLFIND@
CAMLC =$(OCAMLFIND) ocamlc $(CAMLFLAGS)
CAMLOPT =$(OCAMLFIND) ocamlopt $(CAMLFLAGS)
CAMLDEP =@OCAMLDEP@
CAMLLEX =@OCAMLLEX@
CAMLYACC =@MENHIR@
CAMLDOC =$(OCAMLFIND) ocamldoc $(CAMLFLAGS)

BYTE = $(LIBNAME).cma
NATIVE = $(LIBNAME).cmxa $(LIBNAME).a

SOURCES1 = $(SOURCES:.mly=.ml)
SOURCES2 = $(SOURCES1:.mll=.ml)
CMO = $(SOURCES2:.ml=.cmo)
CMX = $(SOURCES2:.ml=.cmx)

DOCDIR=doc

all: depend $(CMI) $(BYTE) $(NATIVE)

.POSIX:

.PHONY: all clean doc

.SUFFIXES: .ml .mli .cmo .cmi .cmx .mll .mly

.ml.cmo:
	$(CAMLC) -c $<

.mli.cmi:
	$(CAMLC) -c $<

.ml.cmx:
	$(CAMLOPT) -c $<

.mll.cmo:
	$(CAMLLEX) $<
	$(CAMLC) -c $*.mli
	$(CAMLC) -c $*.ml

.mll.cmx:
	$(CAMLLEX) $<
	$(CAMLOPT) -c $*.mli
	$(CAMLOPT) -c $*.ml

.mly.cmo:
	$(CAMLYACC) $<
	$(CAMLC) -c $*.mli
	$(CAMLC) -c $*.ml

.mly.cmx:
	$(CAMLYACC) $<
	$(CAMLOPT) -c $*.mli
	$(CAMLOPT) -c $*.ml

.mll.ml:
	$(CAMLLEX) $<

.mly.ml:
	$(CAMLYACC) $<

clean:
	rm -f *.cm[iox] *~ .*~ *.o *.cma *.cmxa *.a
	rm -rf $(DOCDIR)

.depend: $(SOURCES2)
	$(CAMLDEP) *.mli *.ml > .depend

depend: $(SOURCES2) .depend
	$(CAMLDEP) *.mli *.ml > .depend

doc: $(BYTE)
	mkdir -p $(DOCDIR)
	$(CAMLDOC) -d $(DOCDIR) -I . -html *.mli

install: $(BYTE) $(NATIVE) $(CMI)
	$(OCAMLFIND) install $(PACKAGE_NAME) META $^

uninstall:
	ocamlfind remove $(PACKAGE_NAME)
